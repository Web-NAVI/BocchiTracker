    <MudTabPanel Text="General" ID='"pn_one"'></MudTabPanel>
    <MudTabPanel Text="Ticket" ID='"pn_two"'></MudTabPanel>
    <MudTabPanel Text="Directory" ID='"pn_three"'></MudTabPanel>
    <MudTabPanel Text="Description Format" ID='"pn_three"'></MudTabPanel>
</MudTabs>

<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Medium">
        <MudText>@($"Active Index: {activeIndex}")</MudText>
        @Body
