@page "/config/description"
@layout ConfigLayout

<MudPaper Class="pa-4" Style="height:100%; max-height:600px; display:grid; grid-template-rows: auto 1fr;">
    <div style="display:grid; grid-template-columns: auto 1fr auto">
        <MudSelect T="string"
                   Label="Service"
                   Value="@("Cappuccino")"
                   AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem Value="@("Cappuccino")" />
            <MudSelectItem Value="@("Cafe Latte")" />
            <MudSelectItem Value="@("Espresso")" />
        </MudSelect>
        <MudSpacer />
        <div>
            <MudFab Color="Color.Primary"
                    StartIcon="@Icons.Material.Filled.Add"
                    Size="Size.Small"
                    OnClick="(() => FabDeployed = !FabDeployed)"
                    Class="@(FabDeployed ? "rotatedIcon": "")"
                    Style="transition:transform .2s;" />
            @if (FabDeployed)
            {
                <div class="fabOptions">
                    <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                </div>
            }
        </div>
    </div>
    <MudTextField T="string"
                  Variant="Variant.Filled"
                  Text=""
                  Placeholder="Description"
                  AutoGrow=true
                  Adornment="Adornment.End"
                  InputMode="InputMode.text"
                  class="textareaCustom" />
</MudPaper>

<style>

    .fabOptions {
        position: absolute;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
        z-index:1;

    }

    .rotatedIcon {
        transform: rotate(45deg);
    }

    .textareaCustom > div,
    .textareaCustom > div > div,
    .textareaCustom textarea {
        height: calc(70vh - 7rem) !important;
    }
</style>

@code {
    bool FabDeployed;
}
